}

.guide {
  position: absolute;
  left: 50%;
  bottom: 30vh;
  transform: translate(-50%);
  z-index: 1;

  color: white;
  pointer-events: none;
}


.scan-box {
  position: absolute;
  top: 45%;
  left: 50%;
  z-index: 1;
  transform: translateX(-50%);
}

