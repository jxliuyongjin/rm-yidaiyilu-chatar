  width: 46.93vw;
  height: 18.67vw;
}

.scan-box .scan-txt {
  margin-top: 2.93vw;
  line-height: 6.4vw;
  font-size: 4.53vw;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}


