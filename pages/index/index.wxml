      <image class="decoration1" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/dec1.png"></image>
      <image class="decoration2" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/dec2.png"></image>
  <image animation="{{animationDatas[2]}}" class="button3cls" id="2" bind:tap="gotoModel" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/btn3.png"></image>  
  <image animation="{{animationDatas[3]}}" class="button4cls" id="3" bind:tap="gotoModel" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/btn4.png"></image>  
    <image class="decoration3" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/dec3.png"></image>
    <image class="decoration4" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/dec4.png"></image>
  <image animation="{{animationDatas[4]}}" class="button5cls" id="4" bind:tap="gotoModel" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/btn5.png"></image>  
  <image animation="{{animationDatas[5]}}" class="button6cls" id="5" bind:tap="gotoModel" bindload="imageLoaded" src="https://yidaiyilu-s.oss-cn-shanghai.aliyuncs.com/resource/ui/shouye/btn6.png"></image>   
